<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %> 
    <div class="container">

        <h1>Perguntas</h1>
        <hr>
        <a class="btn btn-primary" href="/doquestion">Fazer uma pergunta</a>
        <% perguntas.forEach(pergunta => { %>
            <div class="card mt-4">
            
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>" class="btn btn-success">Responder</a>
                </div>
            </div>
        <% }) %>
    </div>

    
</body>
<%- include('partials/footer.ejs') %>
